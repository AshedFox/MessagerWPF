<Page x:Class="Messager.Pages.ConversationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Messager"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Autorization">
    <Page.Resources>
        <RoutedCommand x:Key="SendMessageCommand"/>
    </Page.Resources>
    <Page.CommandBindings>
        <CommandBinding Command="{StaticResource SendMessageCommand}" Executed="CommandBinding_Executed"/>
    </Page.CommandBindings>
    <Page.InputBindings>
        <KeyBinding Key="Return" Modifiers="Ctrl" Command="{StaticResource SendMessageCommand}"/>
    </Page.InputBindings>

    <Grid Background="#FF828288">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Name="ToolsPanel"  Background="#FFDDDDDD" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="BackButton" Grid.Column="0" MaxHeight="40" Padding="7"
                    Background="{x:Null}" BorderBrush="{x:Null}">
                <Image Source="/Resources/back arrow.png"
                       RenderOptions.BitmapScalingMode="Fant"
                       RenderOptions.EdgeMode="Aliased"/>
            </Button>
            <Label Name="ConversationNameLabel" Grid.Column="1" Content="Кто-то где-то"
                   FontSize="24" FontFamily="Segoe UI Semibold" HorizontalContentAlignment="Center"
                   Background="{x:Null}"/>
            <Button x:Name="ToolsButton" Grid.Column="2" MaxHeight="40" Padding="7"
                    Background="{x:Null}" BorderBrush="{x:Null}">
                <Image Source="/Resources/three dots.png"
                       RenderOptions.BitmapScalingMode="Fant"
                       RenderOptions.EdgeMode="Aliased"/>
            </Button>
        </Grid>
        <ListBox Name="MessageListBox"  Grid.Row="1" BorderBrush="{x:Null}" Margin="4"
                 ItemsSource="{Binding Messages}">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Background" Value="#FFDDDDDD"/>
                    <Setter Property="Margin" Value="2,1"/>
                    <Setter Property="MinHeight" Value="50"/>
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.Resources>
                <DataTemplate DataType="{x:Type local:TextMessage}">
                    <TextBlock Text="{Binding MessageText}"/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type local:AudioMessage}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Button Name="PlaySoundButton" Click="PlaySoundButton_Click" BorderBrush="{x:Null}"
                                        Height="50" Padding="5" Background="Red">
                            <Image Grid.Column="0" Source="/Resources/music icon.png"
                                   RenderOptions.BitmapScalingMode="Fant"
                                   RenderOptions.EdgeMode="Aliased"/>
                        </Button>
                        <MediaElement Grid.Column="1" Source="{Binding Source=AudioPath}"                                    
                                        LoadedBehavior="Manual"/>
                    </Grid>
                </DataTemplate>
            </ListBox.Resources>
        </ListBox>
        <Grid Grid.Row="2" Margin="5" Background="#FFDDDDDD">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Button Name="MusicButton" Width="50" Height="50" Grid.Column="0" FontFamily="Segoe UI Semibold"
                    BorderBrush="{x:Null}" Margin="10, 5" Padding="2"
                    Background="#FFBFBFBF" Click="MusicButton_Click">
                <Image Source="/Resources/music icon.png"
                       RenderOptions.BitmapScalingMode="Fant"
                       RenderOptions.EdgeMode="Aliased"/>
            </Button>
            <TextBox Name="MessageBox" Grid.Column="1" FontFamily="Segoe UI Semibold" 
                     TextWrapping="Wrap" Background="White" BorderBrush="{x:Null}" 
                     Margin="0, 5" VerticalScrollBarVisibility="Auto" AcceptsReturn="True"/>
            <Button Name="SendButton" Grid.Column="2" FontFamily="Segoe UI Semibold"
                    FontSize="18" BorderBrush="{x:Null}" Padding="20,5" Content="ОТПРАВИТЬ"
                    Margin="10, 5" Command="{StaticResource SendMessageCommand}"
                    Background="#FFBFBFBF" Click="SendButton_Click"/>
        </Grid>
    </Grid>
</Page>

